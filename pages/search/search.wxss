/* pages/search/search.wxss */
.top {
  z-index: 10;
  position: absolute;
  top:0;
  left: 0;
  background: #fff;
  width: 100%;
  height: 36px;
  box-shadow: 0 1px 2px rgba(150,150,150,.3);
}
.search {
  box-sizing: border-box;
  display: inline-block;
  width: 95%;
  height: 27px;
  margin: 0 2.5%;
  font-size: 14px;
  color: #808080;
  background-color: #eee; 
  padding: 4px 8px 4px 24px;
  border-radius: 5px;
  overflow: hidden
}
.search-icon {
  position: absolute;
  top: 7px;
  left: calc(2.5% + 6px)
}

.main {
  position: absolute;
  top: 36px;
  width: 100%;
  height: calc(100% - 36px);
  background: #fafafa;
}

.results {
  height: 100%;
}
.location {
  display: block;
  width: 100%;
  height: 64px;
  position: relative;
  background-color: #fff;
  border-bottom: 1px #eee solid;
}
.location-hover {
  background-color: #eee;
}
.location > .position {
  position: absolute;
  font-size: 12px;
  right: 14px;
  top: 14px;
  color: #808080;
}
.location > .title {
  position: absolute;
  font-size: 18px;
  left: 14px;
  top: 10px;
}
.location > .dscpt {
  position: absolute;
  left: 14px;
  top: 38px;
  font-size: 12px;
  color: #808080;
}
.loaded {
  font-size: 14px;
  text-align: center;
  padding: 14px;
  color: #808080;
}

.examples {
  font-size: 14px;
  text-align: center;
  padding: 14px;
}
.examples>text {
  display: block;
}
.example {
  color: #808080;
  margin: 8px;
}
.example::before {
  content: "\""
}
.example::after {
  content: "\""
}